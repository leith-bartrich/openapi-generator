void {{classname}}::SetHttpRetryManager(FHttpRetrySystem::FManager& InRetryManager)
{
	if(&InRetryManager != RetryManager)
	{
		DefaultRetryManager.Reset();
		RetryManager = &InRetryManager;
	}
}

FHttpRetrySystem::FManager& {{classname}}::GetHttpRetryManager()
{
	checkf(RetryManager, TEXT("{{classname}}: RetryManager is null.  You may have meant to set it with SetHttpRetryManager first, or you may not be using a custom RetryManager at all."))
	return *RetryManager;
}

FHttpRequestRef {{classname}}::CreateHttpRequest(const Request& Request) const
{
	if (!Request.GetRetryParams().IsSet())
	{
		return FHttpModule::Get().CreateRequest();
	}
	else
	{
		if (!RetryManager)
		{
			// Create default retry manager if none was specified
			DefaultRetryManager = MakeUnique<HttpRetryManager>(6, 60);
			RetryManager = DefaultRetryManager.Get();
		}

		const HttpRetryParams& Params = Request.GetRetryParams().GetValue();
		return RetryManager->CreateRequest(Params.RetryLimitCountOverride, Params.RetryTimeoutRelativeSecondsOverride, Params.RetryResponseCodes, Params.RetryVerbs, Params.RetryDomains);
	}
}

void {{classname}}::TryBuildResponse(FHttpRequestPtr HttpRequest, FHttpResponsePtr HttpResponse, bool bHttpSucceeded, Response& InOutResponse) const
{
    //this class is a 'friend' to the response and can use private fields directly, rather than
    //local vars.

	InOutResponse.HttpRequest = HttpRequest; //publish the request
	InOutResponse.HttpResponse = HttpResponse; //might be nullptr
	InOutResponse.HttpRequestSuccessful = bHttpSucceeded; //published\cached in the response because HttpResponse might be null.

	//handle the potentially null response.
	if (!HttpResponse.IsValid()){
		return; //nothing else can be gleaned.
	}

    //note: we should probably rename/rework SetHttpResponseCode to void TrySetRestResponseDescription()
	InOutResponse.SetHttpResponseCode(InOutResponse.GetHttpResponseCode()); //Sets RestResponseDescription based on Schema

    //content is retrieved for parsing.
    InOutResponse.RestResponseContentType = HttpResponse->GetContentType();
    if (InOutResponse.RestResponseContentType.IsEmpty())
	{
		return; // Nothing to parse.  Nothing else to glean.
	}

    //note: the platform specific implementation likely allocates the string once per call.
    //we cache it in the response once and then use it both to parse, and to provide via public interface.
	InOutResponse.RestResponseContent = HttpResponse->GetContentAsString();

	//Strictly speaking, we should probably only try to parse the expected return based on the response code.
	//And it should return different types based on the code's definition in the Schema.
	//However we're doing a simpler thing here.  We try to parse an expected successful content type
	//regardless of response code and provide it if we can.

	if (InOutResponse.RestResponseContentType.StartsWith(TEXT("application/json")) || InOutResponse.RestResponseContentType.StartsWith("text/json"))
	{
		TSharedPtr<FJsonValue> JsonValue;
		auto Reader = TJsonReaderFactory<>::Create(InOutResponse.RestResponseContent.GetValue());

		if (FJsonSerializer::Deserialize(Reader, JsonValue) && JsonValue.IsValid())
		{
			if (InOutResponse.FromJson(JsonValue)) //sets the parsed value as best it can
			{
				InOutResponse.RestContentFullyParsed = true; //informs if the parse was fully successful
				return; // nothing more to glean.
			}
		}
		// note: we could try parsing some conventional alternative returns here such as 3.3 in:
		// https://www.baeldung.com/rest-api-error-handling-best-practices
	}
	else if(InOutResponse.RestResponseContentType.StartsWith(TEXT("text/plain")))
	{
		return; // nothing more to glean.
	}
	//note: we could parse other potential return types here.  Such as https://datatracker.ietf.org/doc/html/rfc7807 which
	//would have content type: application/problem+json.  Such a return might warrant flipping IsRestRequestSuccessful to false.

}

